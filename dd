            employees.push({
                id: newId,
                name,
                employeeNumber: empNumber,
                totalPoints: 0
            });
            
            document.getElementById('empName').value = '';
            document.getElementById('empNumber').value = '';
            
            renderEmployees();
            updateEmployeeSelect();
            saveAllData();
            showAlert('ØªÙ… Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ù…ÙˆØ¸Ù Ø¨Ù†Ø¬Ø§Ø­', 'success');
