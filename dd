            const name = document.getElementById('empName').value.trim();
            const empNumber = document.getElementById('empNumber').value.trim();
            
            if (!name || !empNumber) {
                showAlert('ÙŠØ±Ø¬Ù‰ Ù…Ù„Ø¡ Ø¬Ù…ÙŠØ¹ Ø§Ù„Ø­Ù‚ÙˆÙ„', 'error');
                return;
